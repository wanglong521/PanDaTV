<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ProgressBar
            android:id="@+id/pbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#0000ff"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="100%"></android.support.v7.widget.Toolbar>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/toolbar"
            app:layout_heightPercent="92%"
            app:layout_widthPercent="100%">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"></com.youth.banner.Banner>

                <TextView
                    android:id="@+id/panda_Broadcast_Text"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textColor="#0000ff"
                    android:layout_marginLeft="10dp"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/im_home"
                        android:layout_width="150dp"
                        android:layout_height="150dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/zj_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ff0000"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/textbackground"
                                android:text="" />

                            <TextView
                                android:id="@+id/zj_tvs"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:maxLines="2"
                                android:text="" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp">

                            <TextView
                                android:id="@+id/qs_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#ff0000"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:background="@drawable/textbackground"
                                android:text="" />

                            <TextView
                                android:id="@+id/qs_tvs"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:maxLines="2"
                                android:text="" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/liveshwtv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="#0000ff"
                    android:text=""/>
                <com.example.admin.pandatv.model.modelutils.Ify_Grid
                    android:id="@+id/home_gv"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:numColumns="3"
                    android:layout_marginTop="10dp"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:scrollbars="none"
                    ></com.example.admin.pandatv.model.modelutils.Ify_Grid>
                <TextView
                    android:id="@+id/wendforment_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000ff"
                    android:layout_marginLeft="10dp"/>
                <com.example.admin.pandatv.model.modelutils.Ify_Grid
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:numColumns="2"
                    android:layout_marginTop="10dp"
                    android:id="@+id/gv_wendforment"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:scrollbars="none"
                    >

                </com.example.admin.pandatv.model.modelutils.Ify_Grid>
                <TextView
                    android:id="@+id/roll_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000ff"
                    android:layout_marginLeft="10dp"
                    android:text=""/>
               <com.example.admin.pandatv.model.modelutils.Ify_Grid
                   android:layout_width="match_parent"
                   android:layout_height="200dp"
                   android:numColumns="1"
                   android:layout_marginTop="10dp"
                   android:id="@+id/homethree_gv"
                   android:verticalSpacing="10dp"
                   android:horizontalSpacing="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:gravity="center"
                   android:scrollbars="none"
                   ></com.example.admin.pandatv.model.modelutils.Ify_Grid>
                <TextView
                    android:id="@+id/live_china"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#0000ff"
                    android:layout_marginLeft="10dp"
                    android:text=""/>
                <com.example.admin.pandatv.model.modelutils.Ify_Grid
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:numColumns="3"
                    android:layout_marginTop="10dp"
                    android:id="@+id/home_live_gv"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:scrollbars="none"></com.example.admin.pandatv.model.modelutils.Ify_Grid>
            </LinearLayout>

        </ScrollView>


    </android.support.percent.PercentRelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@mipmap/person_sign" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/imageView"
        android:layout_toStartOf="@+id/imageView"
        app:srcCompat="@mipmap/hudong_sign" />


</RelativeLayout>
