<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayer
        android:id="@+id/china_item_video"
        android:layout_width="match_parent"
        android:layout_height="260dp" />
    <LinearLayout
        android:layout_below="@+id/china_item_video"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[正在直播]"
                />
            <TextView
                android:id="@+id/china_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[正在直播]"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="简介"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:src="@drawable/live_down"
                android:id="@+id/china_item_updele"
                android:layout_height="wrap_content" /><TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        </LinearLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/china_item_brief"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView
            android:background="@color/gap"
            android:layout_width="match_parent"
            android:layout_height="8dp" />
    </LinearLayout>
    
</RelativeLayout>
