<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_weight="1.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/livetel_img"
        android:background="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textColor="#000"
                android:text="[正在直播]"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_marginLeft="3sp"
                android:textColor="#000"
                android:text="和我在成都的街头走一走"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/live_title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="简介"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/live_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/live_up"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ebe7e7"></View>

        <TextView
            android:visibility="gone"
            android:text="叫四份哈数据库地方收款方借款拉的屎"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/brief"/>

        <View
            android:visibility="gone"
            android:id="@+id/oneself"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ebe7e7"></View>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <android.support.design.widget.TabLayout
                tabMode="scrollable"
                tabSelectedTextColor="@color/colorPrimaryDark"
                tabIndicatorColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/live_tablayout"
                ></android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/live_viewpager">

            </android.support.v4.view.ViewPager>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>