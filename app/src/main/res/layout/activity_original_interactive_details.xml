<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl"
    tools:context="com.example.admin.pandatv.view.activity.OriginalInteractiveDetailsActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/Yuanchuangdetails_toolbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#0000ff"
            app:layout_heightPercent="8%"
            app:layout_widthPercent="100%">

        </android.support.v7.widget.Toolbar>

        <WebView
            android:id="@+id/web"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/Yuanchuangdetails_toolbar"
            app:layout_heightPercent="92%"
            app:layout_widthPercent="100%"></WebView>
    </android.support.percent.PercentRelativeLayout>


    <TextView
        android:id="@+id/xiangqingtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="--------"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/share_im"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/xiangqingtitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        app:srcCompat="@drawable/play_fullsrcee_share" />

</RelativeLayout>
