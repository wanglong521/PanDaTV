<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/EmailRegistrationLinear"
        android:orientation="horizontal"
        app:layout_heightPercent="8%"
        app:layout_widthPercent="100%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="邮箱注册需要激活后才能登录"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />
    </LinearLayout>

    <EditText
        android:id="@+id/EmailRegistrationmailbox"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/EmailRegistrationLinear"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_bg"
        android:hint="账号：请输入邮箱" />


    <EditText
        android:id="@+id/EmailRegistrationPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/EmailRegistrationmailbox"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_bg"
        android:hint="请输入密码" />


    <EditText
        android:id="@+id/EmailRegistrationPasswordOk"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/EmailRegistrationPassword"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_bg"
        android:hint="请确定密码" />

    <LinearLayout
        android:id="@+id/EmailRegistrationLinear1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_below="@id/EmailRegistrationPasswordOk">

        <EditText
            android:id="@+id/EmailRegistrationimage"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edit_bg"
            android:hint="请输入图片验证码"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/EmailRegistrationLinear2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/EmailRegistrationLinear1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/EmailRegistrationOK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/personal_check_img" />

        <TextView
            android:id="@+id/EmailRegistrationAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="我已阅读并同意《央视网网络服务使用协议》"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/EmailRegistrationLinear2">
    <Button
        android:id="@+id/EmailRegistrationAgreeBut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="注册"
        android:textColor="#ffffff" />
    </LinearLayout>
</android.support.percent.PercentRelativeLayout>